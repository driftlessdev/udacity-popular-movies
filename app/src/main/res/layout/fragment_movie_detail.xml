<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context="com.testinprod.popularmovies.fragments.MovieDetailFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_height="192dp"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginBottom="32dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                android:id="@+id/ivMovieBackdrop"
                android:src="@drawable/movie_board"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/tbCollapse"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/appBar"
        android:clickable="true"
        app:layout_anchorGravity="bottom|right|end"
        android:src="@drawable/ic_star_border_black_24dp"
        android:layout_margin="16dp"
        />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical">




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:background="@color/primary"
                android:id="@+id/cvDetailHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:scaleType="fitCenter"
                    android:id="@+id/ivMovieHeader"
                    android:adjustViewBounds="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/movie_board"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Idea from http://stackoverflow.com/questions/19983335/android-2-relative-layout-divided-in-half-screen -->
                    <View
                        android:id="@+id/centerShim"
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:visibility="invisible"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/tvReleaseTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/centerShim"
                        android:layout_toStartOf="@id/centerShim"
                        android:textColor="@color/secondary_text"
                        android:text="@string/released_title"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvRatingTitle"
                        android:layout_toRightOf="@id/centerShim"
                        android:layout_toEndOf="@id/centerShim"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:text="@string/rating_title"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvReleaseDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/centerShim"
                        android:layout_toStartOf="@id/centerShim"
                        android:layout_below="@id/tvReleaseTitle"
                        android:textColor="@color/primary_text"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvRatingTitle"
                        android:layout_toRightOf="@id/centerShim"
                        android:layout_toEndOf="@id/centerShim"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/primary_text"
                        android:gravity="center"
                        />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                >

                <TextView
                    android:id="@+id/tvOverview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:padding="16dp"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>







</android.support.design.widget.CoordinatorLayout>
